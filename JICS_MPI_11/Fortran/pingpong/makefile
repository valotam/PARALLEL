#--------------------------------------------------------
# makefile for the pingpong.f lab exercise
#--------------------------------------------------------

#--------------------------------------------------------
# Platform specific MPI compilers 
#--------------------------------------------------------

CC = ftn

#--------------------------------------------------------
# The filename to be used for the executable
#--------------------------------------------------------

EXECUTABLE = pingpong

#--------------------------------------------------------
# The source code to be compiled
#--------------------------------------------------------

SRC = pingpong.f

#--------------------------------------------------------
# The compilation rules. Notice that 'TAB' symbol is used
#--------------------------------------------------------
$(EXECUTABLE): $(SRC) 
	$(CC) -o $@ $(SRC)
